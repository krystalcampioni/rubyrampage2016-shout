<!DOCTYPE html>
<html>
  <head>
    <title>Rubyrampage2016Shout</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

<body>
    <header class="header  <%= yield (:header_class) %>">
      <div class="header__content">
        <h1 class="header__logo"><%= link_to 'Shout', root_path %></h1>
        <% if current_user %>
          <nav class="user__menu">

            <button class="sliding-panel-button hamburguer">
              <span></span>
              <span></span>
              <span></span>
            </button>

            <div class="sliding-panel-content">
              <%= link_to  user_shouts_path(current_user) do %>
                <img src="<%= current_user.profile_image_url.gsub("_normal", '') %>" class="user__img"/>
                <div class="user__nickname"><%= current_user.nickname %></div>
              <% end %>

              <a class="user__logout" href="/logout">logout</a>
            </div>
            <div class="sliding-panel-fade-screen"></div>



          </nav>
        <% else %>
          <%= link_to 'Login with Twitter', '/auth/twitter', class: "button button--twitter -align-right" %>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
