<article class="shout" data-shout-id="<%= shout.id %>">
  <div class="shout__text">
    <div class="shout__badge">
      <%= shout.reaction_badge %>
    </div>
    <p>
      <%= shout.message %>
    </p>
  </div>
  <address class="shout__address">
    <b><%= link_to "@#{shout.shouter.nickname}", user_shouts_path(shout.shouter.nickname) %></b> sent on <%= shout.created_at.to_s(:short) %>
  </address>
  <div id="reactions-shout-<%= shout.id %>">
    <%= render "shouts/reactions", reactions: shout.reactions_array %>
  </div>
  <div class="reactions reactions--button">Add reaction </div>
</article>
