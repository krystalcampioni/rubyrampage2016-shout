<section class="shout-tabs">
  <div class="container container--no-margin-top">
    <ul class="accordion-tabs-minimal">
      <li class="tab-header-and-content">
        <a href="#" class="tab-link is-active">
          <span class="tab-link--big"><%= @shouts.count %> ⭐️</span>
          <span class="tab-link--small">received</span>
        </a>
        <div class="tab-content">
          <% @shouts.each do |shout| %>
            <%= render shout =%>
          <% end %>
        </div>
      </li>
      <li class="tab-header-and-content">
        <a href="#" class="tab-link">
          <span class="tab-link--small">sent</span>
          <span class="tab-link--big"><%= @user.sent_shouts.count %> ⭐️</span>
        </a>
        <div class="tab-content">
          <% @user.sent_shouts.each do |shout| %>
            <%= render shout %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</section>
